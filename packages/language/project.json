{
  "name": "language",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/language/src",
  "targets": {
    "compile": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/language",
        "main": "packages/language/src/index.ts",
        "project": "packages/language/package.json",
        "tsConfig": "packages/language/tsconfig.json",
        "platform": "neutral",
        "deleteOutputPath": true,
        "metafile": false,
        "bundle": true,
        "sourcemap": true,
        "minify": false,
        "skipTypeCheck": false,
        "format": ["esm", "cjs"],
        "external": ["vscode"],
        "assets": [
          {
            "input": "packages/language",
            "glob": "README.md",
            "output": "."
          },
          {
            "input": ".",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/language/res",
            "glob": "*.*",
            "output": "res"
          },
          {
            "input": "assets/icons/light",
            "glob": "icon.png",
            "output": "assets/light"
          },
          {
            "input": "assets/icons/dark",
            "glob": "icon.png",
            "output": "assets/dark"
          },
          {
            "input": "packages/language/syntaxes",
            "glob": "*.*",
            "output": "syntaxes"
          },
          {
            "input": "packages/language/examples",
            "glob": "*.*",
            "output": "examples"
          }
        ]
      },
      "configurations": {
        "production": {
          "debug": false,
          "verbose": false
        },
        "development": {
          "debug": true,
          "verbose": true
        }
      }
    },
    "langium": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "outputPath": "packages/language",
      "defaultConfiguration": "default",
      "options": {
        "parallel": false,
        "commands": ["npx langium generate"],
        "cwd": "packages/language"
      },
      "configurations": {
        "default": {
          "options": {
            "commands": ["npx langium generate"],
            "cwd": "packages/language"
          }
        },
        "watch": {
          "options": {
            "commands": ["npx langium generate --watch"],
            "cwd": "packages/language",
            "watch": true
          }
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "outputPath": "packages/language",
      "defaultConfiguration": "default",
      "options": {
        "project": "packages/language/package.json",
        "commands": [
          "pnpm nx run language:langium",
          "pnpm nx run language:compile"
        ],
        "parallel": false
      },
      "configurations": {
        "default": {
          "options": {
            "commands": [
              "pnpm nx run language:langium:default",
              "pnpm nx run language:compile"
            ]
          }
        },
        "watch": {
          "options": {
            "commands": [
              "pnpm nx run language:langium:watch",
              "pnpm nx run language:compile"
            ],
            "watch": true
          }
        }
      }
    },
    "lint": {},
    "test": {}
  }
}
