{
  "name": "language",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/language/src",
  "targets": {
    "build-base": {
      "executor": "@storm-software/workspace-tools:tsup-node",
      "outputs": ["{options.outputPath}"],
      "options": {
        "entry": "packages/language/src/index.ts",
        "outputPath": "dist/packages/language",
        "tsConfig": "packages/language/tsconfig.json",
        "project": "packages/language/package.json",
        "defaultConfiguration": "production",
        "skipTypia": true,
        "assets": [
          {
            "input": "packages/language",
            "glob": "README.md",
            "output": "."
          },
          {
            "input": ".",
            "glob": "LICENSE",
            "output": "."
          },
          {
            "input": "packages/language/res",
            "glob": "*.*",
            "output": "res"
          },
          {
            "input": "assets/icons/light",
            "glob": "icon.png",
            "output": "assets/light"
          },
          {
            "input": "assets/icons/dark",
            "glob": "icon.png",
            "output": "assets/dark"
          },
          {
            "input": "packages/language/syntaxes",
            "glob": "*.*",
            "output": "syntaxes"
          },
          {
            "input": "packages/language/examples",
            "glob": "*.*",
            "output": "examples"
          }
        ]
      },
      "configurations": {
        "production": {
          "debug": false,
          "verbose": false
        },
        "development": {
          "debug": true,
          "verbose": true
        }
      }
    },
    "langium": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/language",
        "defaultConfiguration": "default",
        "command": "npx langium generate",
        "cwd": "packages/language"
      },
      "configurations": {
        "default": {
          "options": {
            "command": "npx langium generate",
            "cwd": "packages/language"
          }
        },
        "watch": {
          "options": {
            "command": "npx langium generate --watch",
            "cwd": "packages/language",
            "watch": true
          }
        }
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "project": "packages/language/package.json",
        "outputPath": "dist/packages/language",
        "defaultConfiguration": "production",
        "command": "pnpm nx run language:langium:default && pnpm nx run language:build-base:production"
      },
      "configurations": {
        "production": {
          "options": {
            "command": "pnpm nx run language:langium:default && pnpm nx run language:build-base:production"
          }
        },
        "development": {
          "options": {
            "command": "pnpm nx run language:langium:default && pnpm nx run language:build-base:development"
          }
        }
      }
    },
    "lint": {},
    "test": {},
    "nx-release-publish": {
      "cache": false,
      "inputs": ["default", "^production"],
      "dependsOn": ["^build"],
      "executor": "@storm-software/workspace-tools:npm-publish",
      "options": {
        "packageRoot": "dist/{projectRoot}",
        "registry": "https://registry.npmjs.org/"
      }
    }
  }
}
