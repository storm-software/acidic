{
  "name": "@acidic/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "adr": "pnpm log4brains adr new",
    "adr-preview": "pnpm log4brains preview",
    "prepare": "pnpm add husky -w",
    "preinstall": "npx -y only-allow pnpm",
    "install:csb": "corepack enable && pnpm install --frozen-lockfile",
    "clean": "rimraf dist",
    "prebuild": "pnpm clean",
    "clean:tools": "rimraf dist/tools",
    "clean:docs": "rimraf dist/docs",
    "clean:packages": "rimraf dist/packages",
    "build": "nx affected -t build --parallel=5",
    "build:all": "nx run-many -t build --all --parallel=5",
    "build:production": "nx run-many -t build --all --prod --parallel=5",
    "build:tools": "nx run-many -t build --projects=tools/* --parallel=5",
    "build:docs": "nx run-many -t build --projects=docs/* --parallel=5",
    "build:packages": "nx run-many -t build --projects=packages/* --parallel=5",
    "nx": "nx",
    "graph": "nx graph",
    "lint": "pnpm storm-lint all --skip-cspell",
    "format": "nx format:write",
    "help": "nx help",
    "dep-graph": "nx dep-graph",
    "local-registry": "nx local-registry @acidic/acidic",
    "e2e": "nx e2e",
    "test": "nx test && pnpm test:storybook",
    "test:storybook": "pnpm test-storybook",
    "commit": "pnpm storm-git commit",
    "readme": "pnpm storm-git readme --templates=\"docs/readme-templates\"",
    "api-extractor": "nx g @storm-software/workspace-tools:api-extractor --outputPath 'docs/api-reference' --clean --no-interactive",
    "release": "pnpm storm-git release"
  },
  "private": true,
  "dependencies": {
    "@eslint/eslintrc": "latest",
    "@nx/devkit": "latest",
    "@nx/eslint": "latest",
    "@nx/eslint-plugin": "latest",
    "@nx/jest": "latest",
    "@nx/js": "latest",
    "@semantic-release/changelog": "latest",
    "@semantic-release/commit-analyzer": "latest",
    "@semantic-release/exec": "latest",
    "@semantic-release/git": "latest",
    "@semantic-release/github": "latest",
    "@semantic-release/npm": "latest",
    "@semantic-release/release-notes-generator": "latest",
    "@storm-software/git-tools": "latest",
    "@storm-software/linting-tools": "latest",
    "@storm-software/testing-tools": "latest",
    "@storm-software/workspace-tools": "latest",
    "@swc-node/register": "latest",
    "@swc/cli": "latest",
    "@swc/core": "latest",
    "@swc/helpers": "latest",
    "@types/jest": "latest",
    "@types/node": "20.8.10",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "eslint": "latest",
    "husky": "^8.0.3",
    "jest": "latest",
    "jest-environment-jsdom": "latest",
    "jest-environment-node": "latest",
    "lint-staged": "latest",
    "log4brains": "latest",
    "prettier": "latest",
    "prettier-plugin-packagejson": "latest",
    "prettier-plugin-prisma": "latest",
    "semantic-release": "latest",
    "ts-jest": "latest",
    "ts-node": "latest",
    "tslib": "latest",
    "tsup": "latest",
    "typescript": "~5.2.2",
    "verdaccio": "latest"
  },
  "devDependencies": {
    "@nx/workspace": "latest",
    "nx": "latest"
  },
  "triggerEmptyDevReleaseByIncrementingThisNumber": 0,
  "keywords": [
    "acidic",
    "acidic",
    "storm",
    "stormstack",
    "storm-ops",
    "acidic",
    "acidic-lang",
    "acidic-model",
    "impact",
    "nextjs",
    "prisma",
    "zenstack",
    "hasura",
    "strapi",
    "graphql",
    "sullivanpj",
    "monorepo"
  ],
  "homepage": "https://stormsoftware.org",
  "bugs": {
    "url": "https://stormsoftware.org/support",
    "email": "support@stormsoftware.org"
  },
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.org",
    "url": "https://stormsoftware.org"
  },
  "namespace": "@acidic",
  "description": "ðŸ§ª Acidic is a modeling tool that can be used to describe and generate code for API end points, database tables, type definitions, client components, and so much more!",
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/acidic.git"
  },
  "packageManager": "pnpm@8.10.2",
  "engines": {
    "node": ">=18.17.1",
    "pnpm": ">=8.10.2"
  },
  "prettier": "@storm-software/linting-tools/prettier/config.json",
  "nx": {
    "includedScripts": [
      "lint",
      "format"
    ]
  }
}
