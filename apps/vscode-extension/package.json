{
  "name": "acidic-workspace",
  "displayName": "Acidic Workspace",
  "version": "0.0.1",
  "private": false,
  "description": "ðŸ§ª Acidic is a modeling tool that can be used to describe and generate code for API end points, database tables, type definitions, client components, and so much more!",
  "categories": [
    "Programming Languages",
    "Data Science"
  ],
  "keywords": [
    "acidic",
    "storm",
    "stormstack",
    "fullstack",
    "react",
    "typescript",
    "data modeling",
    "trpc",
    "graphql",
    "zenstack",
    "prisma",
    "zod",
    "valibot"
  ],
  "homepage": "https://acidic.io/acidic-workspace",
  "bugs": {
    "url": "https://stormsoftware.org/support",
    "email": "support@stormsoftware.org"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/acidic.git",
    "directory": "apps/vscode-extension"
  },
  "license": "Apache License 2.0",
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.org",
    "url": "https://stormsoftware.org"
  },
  "publisher": "storm-software",
  "type": "commonjs",
  "main": "./main.js",
  "contributes": {
    "commands": [
      {
        "command": "acidicWorkspace.onStartupFinished",
        "title": "Acidic Engine: Start Workspace",
        "icon": "$(beaker)"
      },
      {
        "command": "acidicWorkspace.selectWorkspaceManually",
        "title": "Acidic Engine: Select Workspace",
        "icon": "$(symbol-folder)"
      },
      {
        "command": "acidicWorkspace.refresh",
        "title": "Acidic Engine: Refresh Workspace",
        "icon": "$(sync~spin)"
      },
      {
        "command": "acidicWorkspace.openSchemaExplorer",
        "title": "Acidic Engine: Open Schema Explorer",
        "icon": {
          "light": "assets/vscode/test-tube.svg",
          "dark": "assets/vscode/test-tube.svg"
        }
      },
      {
        "command": "acidicWorkspace.refreshSchemaStart",
        "title": "Acidic Engine: Refresh Schema",
        "icon": "$(sync~spin)"
      },
      {
        "command": "acidicWorkspace.refreshSchemaEnd",
        "title": "Acidic Engine: Refresh Schema End",
        "icon": "$(sync-ignored)"
      }
    ],
    "editor/title": [
      {
        "command": "acidicWorkspace.refresh",
        "group": "navigation"
      }
    ],
    "grammars": [
      {
        "language": "acidic",
        "scopeName": "source.acidic",
        "path": "./syntaxes/acidic.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "acidic",
        "aliases": [
          "storm",
          "acidic language",
          "acidic schema",
          "acidic model",
          "storm acidic"
        ],
        "extensions": [
          ".acid",
          ".acidic"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/light/icon.png",
          "dark": "./assets/dark/icon.png"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "acidicWorkspace.refreshSchemaStart",
          "when": "view == acidic-workspace",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "acidicWorkspace.refreshSchemaStart",
          "when": "viewItem == schema_active"
        }
      ]
    },
    "views": {
      "acidic-workspace": [
        {
          "id": "acidicWorkspace.views.welcome",
          "name": "Getting Started",
          "when": "!hasWorkspaceRoot",
          "contextualTitle": "Acidic Workspace - Getting Started",
          "icon": "./assets/vscode/test-tube.svg",
          "visibility": "visible"
        },
        {
          "id": "acidicWorkspace.views.services",
          "type": "tree",
          "name": "Service Explorer",
          "contextualTitle": "Service Explorer",
          "icon": "./assets/vscode/test-tube.svg",
          "when": "hasWorkspaceRoot",
          "visibility": "visible"
        },
        {
          "id": "acidicWorkspace.views.actions",
          "name": "Actions",
          "when": "hasWorkspaceRoot"
        },
        {
          "id": "acidicWorkspace.views.support",
          "name": "Support and Feedback",
          "visibility": "visible"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "acidic-workspace",
          "title": "Acidic Workspace",
          "icon": "./assets/vscode/test-tube.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "acidicWorkspace.views.welcome",
        "contents": "Acidic Workspace - A visual modeling tool for fullstack development."
      },
      {
        "view": "acidicWorkspace.views.welcome",
        "contents": "[$(rocket) Getting Started](https://acidic.io/acidic-workspace)"
      },
      {
        "view": "acidicWorkspace.views.welcome",
        "contents": "Visual Studio Code does not seem to be open in a valid workspace folder. \n Acidic Workspace either expects the current directory to be the root of the repository or for the user to select the workspace manually. \n [$(symbol-folder) Select Workspace](command:acidicWorkspace.selectWorkspaceManually)",
        "when": "!hasWorkspaceRoot"
      },
      {
        "view": "acidicWorkspace.views.welcome",
        "contents": "We couldn't find any projects in this workspace. \n Make sure that the proper dependencies are installed locally and refresh the workspace. \n [$(sync) Refresh Workspace](command:acidicWorkspace.refresh)\n If you're just getting started with Acidic, you can learn more by reading our [documentation](https://acidic.io/getting-started).",
        "when": "hasWorkspaceRoot"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:acidic"
  ],
  "dependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@storm-software/config-tools": "latest",
    "@storm-stack/errors": "latest",
    "@storm-stack/file-system": "latest",
    "@storm-stack/logging": "latest",
    "@storm-stack/serialization": "latest",
    "esbuild-plugin-pino": "^2.1.0",
    "express": "^4.18.2",
    "langium": "^1.2.0",
    "pino-pretty": "^10.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-pattern": "^5.0.5",
    "vscode": "^1.1.37",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@storm-software/testing-tools": "latest",
    "@storm-software/workspace-tools": "latest",
    "@types/node": "20.9.0",
    "langium-cli": "^1.2.0",
    "typescript": "~5.2.2",
    "vscode-test": "^1.6.1"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "publishConfig": {
    "directory": "dist/apps/vscode-extension",
    "linkDirectory": true
  },
  "icon": "./assets/light/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "preview": false
}
