{
  "name": "acidic-workspace",
  "displayName": "Acidic Workspace",
  "version": "0.0.1",
  "private": false,
  "description": "ðŸ§ª Acidic is a modeling tool that can be used to describe and generate code for API end points, database tables, type definitions, client components, and so much more!",
  "categories": [
    "Programming Languages",
    "Data Science"
  ],
  "keywords": [
    "acidic",
    "storm",
    "stormstack",
    "fullstack",
    "react",
    "typescript",
    "data modeling",
    "trpc",
    "graphql",
    "zenstack",
    "prisma",
    "zod",
    "valibot"
  ],
  "homepage": "https://acidic.io/acidic-workspace",
  "bugs": {
    "url": "https://stormsoftware.org/support",
    "email": "support@stormsoftware.org"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/storm-software/acidic.git",
    "directory": "apps/vscode-extension"
  },
  "license": "Apache License 2.0",
  "author": {
    "name": "Storm Software",
    "email": "contact@stormsoftware.org",
    "url": "https://stormsoftware.org"
  },
  "publisher": "storm-software",
  "type": "commonjs",
  "main": "./extension/main.js",
  "contributes": {
    "commands": [
      {
        "command": "acidic-workspace.onStartupFinished",
        "title": "Acidic Engine: Start Workspace",
        "icon": "$(gist)"
      }
    ],
    "grammars": [
      {
        "language": "acidic",
        "scopeName": "source.acidic",
        "path": "./syntaxes/acidic.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "acidic",
        "aliases": [
          "storm",
          "acidic language",
          "acidic schema",
          "acidic model",
          "storm acidic"
        ],
        "extensions": [
          ".acid",
          ".acidic"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/light/icon.png",
          "dark": "./assets/dark/icon.png"
        }
      }
    ],
    "views": {
      "acidic-workspace": [
        {
          "id": "acidicWorkspaceModels",
          "type": "webview",
          "name": "Workspace Schemas"
        },
        {
          "id": "acidicWorkspaceHelp",
          "name": "Support and Feedback"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "acidic-workspace",
          "title": "Acidic Workspace",
          "icon": "./assets/vscode/activity-bar.svg"
        }
      ]
    }
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:acidic"
  ],
  "dependencies": {
    "@anatine/esbuild-decorators": "^0.2.19",
    "@storm-software/config-tools": "latest",
    "@storm-stack/errors": "latest",
    "@storm-stack/file-system": "latest",
    "@storm-stack/logging": "latest",
    "express": "^4.18.2",
    "langium": "^1.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ts-pattern": "^5.0.5",
    "vscode": "^1.1.37",
    "vscode-jsonrpc": "^8.2.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@storm-software/testing-tools": "latest",
    "@storm-software/workspace-tools": "latest",
    "@types/node": "20.9.0",
    "langium-cli": "^1.2.0",
    "typescript": "~5.2.2",
    "vscode-test": "^1.6.1"
  },
  "engines": {
    "vscode": "^1.67.0"
  },
  "publishConfig": {
    "directory": "dist/apps/vscode-extension",
    "linkDirectory": true
  },
  "icon": "./assets/light/icon.png",
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "preview": false
}
