{
  "name": "vscode-extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/vscode-extension/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "main": "apps/vscode-extension/extension/main.ts",
        "tsConfig": "apps/vscode-extension/tsconfig.app.json",
        "outputPath": "dist/apps/vscode-extension",
        "external": ["vscode", "typescript", "@swc/core"],
        "bundle": true,
        "thirdParty": true,
        "minify": false,
        "sourcemap": true,
        "format": ["cjs"],
        "additionalEntryPoints": [
          "apps/vscode-extension/src/main.tsx",
          "apps/vscode-extension/language-server/main.ts"
        ],
        "generatePackageJson": false,
        "assets": [
          {
            "glob": "package.json",
            "input": "apps/vscode-extension",
            "output": "/"
          },
          {
            "glob": "CHANGELOG.md",
            "input": "",
            "output": "/"
          },
          {
            "glob": "LICENSE",
            "input": "",
            "output": "/"
          },
          {
            "glob": "README.md",
            "input": "apps/vscode-extension",
            "output": "/"
          },
          {
            "input": "assets/icons/vscode",
            "glob": "*.*",
            "output": "assets/vscode"
          },
          {
            "input": "assets/icons/light",
            "glob": "icon.png",
            "output": "assets/light"
          },
          {
            "input": "assets/icons/dark",
            "glob": "icon.png",
            "output": "assets/dark"
          },
          {
            "input": "packages/language/syntaxes",
            "glob": "*.*",
            "output": "syntaxes"
          },
          {
            "input": "packages/language",
            "glob": "language-configuration.json",
            "output": "."
          },
          {
            "input": "packages/language/examples",
            "glob": "*.*",
            "output": "examples"
          }
        ],
        "deleteOutputPath": true,
        "platform": "node",
        "esbuildConfig": "apps/vscode-extension/esbuild.config.js"
      },
      "configurations": {
        "ci": {
          "optimization": false
        },
        "production": {
          "skipTypeCheck": true,
          "minify": false
        }
      },
      "outputs": ["{options.outputPath}"]
    },
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx run vscode-extension:build",
          "pnpm pack \"./apps/vscode-extension\" --pack-destination \"./dist/apps/vscode-extension\""
        ],
        "parallel": false
      }
    },
    "publish-dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx run vscode-extension:build",
          "cd dist/apps/vscode-extension",
          "pnpm publish --registry http://localhost:4873"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf /S /Q \"package.json\" ",
          "renamer --replace --find \"package.vsce.json\" --replace \"package.json\" *",
          "npx vsce package --no-dependencies",
          "npx vsce publish --no-dependencies"
        ],
        "parallel": false,
        "cwd": "dist/apps/vscode-extension"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/vscode-extension/**/*.ts",
          "apps/vscode-extension/**/*.tsx",
          "apps/vscode-extension/package.json"
        ]
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["ui-webview"]
}
